@using FluentBootstrap;

@{
    Layout = "_Layout.cshtml";
    var Title = Model.Get<string>("Title", null);
    var Lead = Model.Get<string>("Lead", null);
    var Published = Model.Get<DateTime>("Published", default(DateTime));
    var Edited = Model.Get<DateTime>("Edited", default(DateTime));        
    var Page = System.IO.Path.GetFileNameWithoutExtension(Model.Get<string>(MetadataKeys.RelativeFilePath));
    var Tags = Model.Get<string[]>("Tags");
}

@using (Bs.Div().AddCss("banner", "container-sm-height").Begin())
{
    using (var row = Bs.GridRow().AddCss("row-sm-height").Begin())
    {
        using (row.GridColumn().SetSm(8).AddCss("col-sm-height", "col-bottom").Begin())
        {
            <div class="title">@Title</div>
            if (!string.IsNullOrWhiteSpace(Lead))
            {
                <div class="lead">@Lead</div>
            }
        }
        using (row.GridColumn().SetSm(4).AddCss("col-sm-height", "col-bottom", "stats").Begin())
        {
            using (var statRow = Bs.GridRow().Begin())
            {
                using (statRow.GridColumn().SetSm(12).Begin())
                {
                    <hr class="@Css.VisibleXsBlock" />
                    
                    string[] tags = Model.Get("Tags") as string[];
                    if (Tags != null)
                    {
                        <div><strong>Tags</strong></div>
                        <div>
                            @foreach (string tag in Tags.OrderBy(x => x))
                            {
                                @Html.TagButton(tag)
                            }
                        </div>     
                    }     
                    
                    if (Published != default(DateTime))
                    {
                        <div><strong>Published</strong></div>
                        <div class="icon-calendar"> &nbsp;@Published.ToLongDateString()</div>
                    }
                    if (Edited != default(DateTime))
                    {
                        <div><strong>Edited</strong></div>
                        <div class="icon-calendar"> &nbsp;@Edited.ToLongDateString()</div>
                    }
                    <div><strong>Comments</strong></div>
                    <div class="icon-talk-chat-2"> &nbsp;<a href="#disqus_thread" data-disqus-identifier="@Page"></a></div>               
                    <div><a class="twitter-share-button" href="https://twitter.com/share" data-url="http://www.daveaglick.com/posts/@Page" data-via="daveaglick" data-text="@Title" data-count="none">Tweet</a></div>
                }
            }
        }                
    }
}

<hr />
@using (var row = Bs.GridRow().Begin())
{
    using (row.GridColumn().SetSm(12).Begin())
    {
        @RenderBody()
    }         
}

<hr />
@using (var row = Bs.GridRow().Begin())
{
    using (row.GridColumn().SetSm(12).Begin())
    {
        <div id="disqus_thread"></div>
        <script type="text/javascript">
            /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
            var disqus_shortname = 'somedave'; // required: replace example with your forum shortname
            var disqus_identifier = '@Page';
            var disqus_title = '@Title';
            var disqus_url = 'http://www.daveaglick.com/posts/@Page';

            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function() {
                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
        <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>    
    }         
}
