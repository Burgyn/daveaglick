@model Somedave.Models.Blog.Tags

@{
    Title = Model.Tag == null ? "All Tags" : Model.Tag;
}

@Html.Partial(MVC.Shared.Views.Title, Model.Tag == null ? "icon-tags" : "icon-tag-2")

@using (var container = Bootstrap.Container().AddCss("container-sm-height"))
{
    using (var row = container.GridRow().AddCss("row-sm-height"))
    {
        if (Model.Tag != null)
        {
            using (row.GridColumn().Sm(8).AddCss("right-border", "col-sm-height"))
            {
                @Html.Partial(MVC.Shared.Views.PostList, Model.Posts)
                <hr class="@Css.VisibleXsBlock" />
            }
        }

        using (row.GridColumn().Sm(Model.Tag == null ? 12 : 4).AddCss("col-sm-height"))
        {
            foreach (KeyValuePair<string, int> tag in Model.AllTags)
            { 
                @Html.TagButton(tag.Key, tag.Value, tag.Key == Model.Tag ? ButtonStyle.Primary : ButtonStyle.Default).BtnXs(Model.Tag != null)
            }
        }
    }
}