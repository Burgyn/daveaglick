@{
    Title = "NuGet Stats - Status";
}

@model Somedave.Models.NuGetStats.Status

@using (Bootstrap.Container().AddCss("banner").Begin())
{
    @Bootstrap.Heading3(Html.ActionLink("NuGet Stats", MVC.NuGetStats.Index()).ToString())
    @Bootstrap.Div().AddCss("title").SetText("Status")
    <hr />
}

@using (Bootstrap.Container().Begin())
{
    using (var table = Bootstrap.Table().SetStyle(TableStyle.Striped).Begin())
    {
        @table.TableHeaderRow("Start Time", "End Time", "Total Count", "Processed Count", "Last Updated", "Exception")
        foreach (History history in Model.Histories)
        {
            @table.TableDataRow(history.StartTime, history.EndTime, history.TotalCount, history.ProcessedCount, history.LastUpdated, history.Exception)
        }
    }
}