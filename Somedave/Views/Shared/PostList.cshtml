@using HtmlAgilityPack;

@model IEnumerable<BlogPost>

@using (var list = Bootstrap.List(FluentBootstrap.Typography.ListType.Unordered))
{          
    foreach (BlogPost post in Model)
    {
        using (list.ListItem())
        {
            @Bootstrap.Strong(Bootstrap.Link(post.Title, Url.Action(post.GetAction())).ToHtmlString())
            if (post.Published != default(DateTime))
            {
                <span class="label label-default label-date icon-calendar">@post.Published.ToShortDateString()</span>
                <span class="label label-default label-comments icon-talk-chat-2"><a href="@Url.Action(post.GetAction())#disqus_thread" data-disqus-identifier="@post.GetViewName()"></a></span>
            }
            if (!string.IsNullOrWhiteSpace(post.Lead))
            {
                <br />@post.Lead
            }
        }
    }
}