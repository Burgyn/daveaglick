<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=Edge"/>

		<title>Somedave@(string.IsNullOrWhiteSpace(Title) ? string.Empty : " - " + Title)</title>
        <meta name="description" content="The personal blog of Dave Glick" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">        

        <link type="application/rss+xml" rel="alternate" title="Somedave" href="/feed/rss" />
        <link type="application/atom+xml" rel="alternate" title="Somedave" href="/feed/atom" />
        <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
        <link rel="icon" href="/favicon.ico" type="image/x-icon">

        <link href="@Links.Content.bootstrap.bootstrap_less" rel="stylesheet">
        <link href="@Links.Content.prism_css" rel="stylesheet">
        <link href="@Links.Content.master_less" rel="stylesheet">

        <meta name="application-name" content="Somedave" />
        <meta name="msapplication-tooltip" content="Somedave" />
        <meta name="msapplication-starturl" content="/" />

        <meta property="og:title" content="Somedave@(string.IsNullOrWhiteSpace(Title) ? string.Empty : " - " + Title)" />
        @* <meta property="og:image" content="@Blog.Image" /> *@
        <meta property="og:type" content="website" />
        <meta property="og:url" content="@(Request.Url.Scheme +"://" + Request.Url.Authority + Request.RawUrl)" />
        <!-- TODO: More social graph meta tags -->

        <script src="@Links.Scripts.jquery_1_9_0_min_js"></script>
        <script src="@Links.Scripts.bootstrap_min_js"></script>
        <script src="@Links.Scripts.prism_js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/webfont/1.4.7/webfont.js"></script>
        <script>
            WebFont.load({
                google: {
                    families: ['Lato:400,900:latin', 'Droid+Serif::latin', 'Indie+Flower::latin']
                },
                custom: {
                    families: ['somedave'],
                    urls: ['https://fontastic.s3.amazonaws.com/gfxCC547kHqmQZtxrW5KFY/icons.css']
                }
            });
        </script>
	</head>
	<body>
        @using (Bootstrap.Div().SetId("page-wrapper").Begin())
        {
            using (var container = Bootstrap.Container().AddCss("topnav", "container-sm-height").Begin())
            {
                using (var row = container.GridRow().AddCss("nav-row", "row-sm-height").Begin())
                {
                    using (row.GridColumn().SetXs(3).SetSm(8).AddCss("logo-col", "col-sm-height", "col-bottom").Begin())
                    { 
                        @Html.ActionLink("<somedave/>", MVC.Home.Index())
                    }
                    using (row.GridColumn().SetXs(9).SetVisibility(Visibility.VisibleXsBlock).Begin())
                    {
                        using (Bootstrap.Div().SetVisibility(Visibility.VisibleXsBlock).Begin())
                        {         
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        }
                    }
                    @Bootstrap.Clearfix().SetVisibility(Visibility.VisibleXsBlock)                    
                    using (row.GridColumn().SetXs(12).SetSm(2).AddCss("nav-col", "collapse", "col-sm-height").Begin())
                    { 
                        using (var nav = Bootstrap.List().Begin())
                        {
                            @nav.ListItem("<strong>/</strong> " + Bootstrap.Link(" About", Url.Action(MVC.Home.About())).ToHtmlString()) 
                            @nav.ListItem("<strong>/</strong> " + Bootstrap.Link(" Archive", Url.Action(MVC.Blog.Posts(null))).ToHtmlString()) 
                            @nav.ListItem("<strong>/</strong> " + Bootstrap.Link(" Tags", Url.Action(MVC.Blog.Tags(null))).ToHtmlString()) 
                            @nav.ListItem("<strong>/</strong> " + Bootstrap.Link(" Likes", Url.Action(MVC.Home.Likes())).ToHtmlString()) 
                        }     
                    } 
                    @Bootstrap.Clearfix().SetVisibility(Visibility.VisibleXsBlock)  
                    using (row.GridColumn().SetXs(12).SetSm(2).AddCss("proj-col", "collapse", "col-sm-height").Begin())
                    { 
                        @Bootstrap.Div().AddChild(x => Bootstrap.Strong("Projects"))
                        using (var nav = Bootstrap.List().Begin())
                        {
                            @nav.ListItem("<strong>/</strong> " + Bootstrap.Link("FluentBootstrap", "http://fluentbootstrap.com"))
                            @nav.ListItem("<strong>/</strong> " + Bootstrap.Link("RazorDatabase", Url.Action(MVC.Projects.RazorDatabase())).ToHtmlString()) 
                        }
                        <a class="twitter-follow-button" href="https://twitter.com/somedaveg" data-show-count="false" data-lang="en">Follow @@somedaveg</a>    
                    } 
                }
            }            
		    @RenderBody()
        }
        @using (Bootstrap.Div().SetId("sticky-footer-wrapper").Begin())
        {
            using (Bootstrap.Div().SetId("sticky-footer").Begin())
            {
                using (Bootstrap.Container().Begin())
                {
                    using(Bootstrap.Small().Begin())
                    {
                        <text>
                            Copyright © @DateTime.Now.Year by Dave Glick. All jams and jellies preserved. The opinions expressed herein are my own and do not represent my employer's, sponsors', or any other third-party views in any way. This work is licensed under a
                            @Bootstrap.Link(Bootstrap.Span().SetId("icon-creative-commons").ToHtmlString() + " Creative Commons Attribution 4.0 International License", "http://creativecommons.org/licenses/by/4.0/").AddAttribute("rel", "license").
                            <br />
                            @Bootstrap.Link(Bootstrap.Span().SetId("icon-rss").ToHtmlString() + " RSS Feed", "/feed/rss") | @Bootstrap.Link(Bootstrap.Span().SetId("icon-rss").ToHtmlString() + " Atom Feed", "/feed/atom")
                            <br />
                            @Bootstrap.Link(Bootstrap.Span().SetId("icon-github-square").ToHtmlString() + " This Site on GitHub", "https://github.com/somedave/Somedave")
                        </text>
                    }
                }
            }
        }

        <script type="text/javascript">
            /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
            var disqus_shortname = 'somedave'; // required: replace example with your forum shortname

            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function () {
                var s = document.createElement('script'); s.async = true;
                s.type = 'text/javascript';
                s.src = '//' + disqus_shortname + '.disqus.com/count.js';
                (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
            }());

            // Google Analytics
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-54470483-1', 'auto');
            ga('send', 'pageview');

            // Twitter
            window.twttr = (function (d, s, id) {
