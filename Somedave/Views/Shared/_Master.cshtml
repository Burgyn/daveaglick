        <link href="@Links.Content.bootstrap.bootstrap_less" rel="stylesheet">
        <link href="@Links.Content.prism_css" rel="stylesheet">
        <link href="@Links.Content.master_less" rel="stylesheet">

        <meta name="application-name" content="Somedave" />
        <meta name="msapplication-tooltip" content="Somedave" />
        <meta name="msapplication-starturl" content="/" />

        <meta property="og:title" content="Somedave@(string.IsNullOrWhiteSpace(Title) ? string.Empty : " - " + Title)" />
        @* <meta property="og:image" content="@Blog.Image" /> *@
        <meta property="og:type" content="website" />
        <meta property="og:url" content="@(Request.Url.Scheme +"://" + Request.Url.Authority + Request.RawUrl)" />
        <!-- TODO: More social graph meta tags -->

        <script type="text/javascript">
